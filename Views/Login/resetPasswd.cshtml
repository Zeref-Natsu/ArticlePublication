@* 最上面的版面配置 *@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- nav section -->
<link href="/css/banner.css" rel="stylesheet" />
<section class="nav_section">
    <div class="container">
        <div class="custom_nav2">
            <nav class="navbar navbar-expand custom_nav-container ">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="d-flex  flex-column flex-lg-row align-items-center">
                        <ul class="navbar-nav  ">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/index">全部</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/testimonial">主題相關</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/MyArticle">我的文章</a>
                            </li>
                            <li class="nav-item">
                                <img src="~/images/account.jfif" alt="">
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@TempData["Account_Ref"]">@TempData["Account"]</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</section>
<!-- end nav section -->

<div class="container">
    <form method="post" action="/Login/resetPasswd">
        <br />
        <h2>密碼重設</h2>
        <br />
        <label>會員帳號</label>
        <br />
        <input type="text" id="inputUserAccount" name="account" required class="form-control" placeholder="輸入您的電子信箱" />
        <div>
            <span style="color:red">@ViewBag.Msg1</span>
        </div>
        <br /><br />
        <input type="submit" name="submit" value="確認帳號" class="btn btn-primary" />
        <br />
        <br />
    </form>
</div>


@*以下為回傳訊息的必須指令*@
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        var message = @Html.Raw(Json.Serialize(TempData["Message"]));
        @* 專案類型"ASP.NET CORE WEB 應用程式(MVC)" 的用Json.Serialize; "ASP.NET WEB 應用程式(.NET Framework)" 的用Json.Encode *@
        alert(message);
    </script>
}
